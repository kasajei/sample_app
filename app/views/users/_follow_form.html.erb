<% unless current_user?(@user) %>
  <%= react_component(
          "follow_button",
          user: UserSerializer.new(@user).as_json,
          relationship: current_user.active_relationships.find_by(followed_id: @user.id)&.attributes
      ) %>

  <!--  <div id="follow_form">-->
  <%# if current_user.following?(@user) %>
  <%#= render "unfollow" %>
  <%# else %>
  <%#= render "follow" %>
  <%# end %>
  <!--  </div>-->
<% end %>
